<%- if controller_name != 'sessions' %>
  <div>Already on YumHacker?
  <%= link_to "Sign in", new_session_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div> New to YumHacker?
    <%= link_to "Sign up", new_registration_path(resource_name) %></div>
<% end -%>

<!-- The links below are disabled until the necessary support code is in place -->

<%- if false && devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div><%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'small' %></div>
<% end -%>

<%- if false && devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => 'small' %></div>
<% end -%>

<%- if false && devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => 'small' %></div>
<% end -%>

<%- if false && devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></div>
  <% end -%>
<% end -%>
